<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_weight="0.06"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme">


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:background="@drawable/turnback"
                android:backgroundTint="@android:color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Ile yaşamaktan mutluluk duyarım..."
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="24sp" />


        </android.support.v7.widget.Toolbar>

    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="434dp"
        android:layout_weight="0.56">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <CheckBox
                android:id="@+id/checkBox8"
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:drawableLeft="@drawable/moustache"
                android:text="Erkekler ile" />

            <CheckBox
                android:id="@+id/checkBox7"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:drawableLeft="@drawable/Lip"
                android:text="KIzlar ile" />

            <CheckBox
                android:id="@+id/checkBox6"
                android:layout_width="match_parent"
                android:layout_height="98dp"
                android:drawableLeft="@drawable/smoke"
                android:text="Sigara içenler ile" />

            <CheckBox
                android:id="@+id/checkBox4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/Bag_Big"
                android:text="Çalışanlar ile" />

            <CheckBox
                android:id="@+id/checkBox5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/Book_Big"
                android:text="Öğrenciler ile" />

            <CheckBox
                android:id="@+id/checkBox3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/pet"
                android:text="Evcil hayvanı olanlar ile" />
        </LinearLayout>
    </ScrollView>


    <Button
        android:id="@+id/button17"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:background="@android:color/holo_blue_bright"
        android:text="Onayla ve Devam Et"
        android:textColor="@android:color/white"
        android:layout_weight="0.29" />

</LinearLayout>