<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >


            <TextView
                android:id="@+id/ara_yayin_arayan"
                style="?android:attr/listSeparatorTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ev Arayan"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/ara_yayin_resim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@color/common_google_signin_btn_text_light_disabled" />

            <TextView
                android:id="@+id/ara_yayin_yas"
                style="?android:attr/listSeparatorTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kaç Yaşındasınız"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/ara_yayin_meslek"
                style="?android:attr/listSeparatorTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mesleğiniz"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/ara_yayin_evcilvarmi"
                style="?android:attr/listSeparatorTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Evcil Hayvanınız Var mı ?"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/ara_yayin_sigaravarmi"
                style="?android:attr/listSeparatorTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sigara Kullanıyor musunuz?"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/ara_yayin_yasaralik"
                style="?android:attr/listSeparatorTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hangi Yaş Aralığı ile yaşamak istiyorsunuz?"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/ara_yayin_neredelive"
                style="?android:attr/listSeparatorTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ne Tarafta oturmak istiyorsunuz?"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/ara_yayin_butce"
                style="?android:attr/listSeparatorTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bütçeniz "
                android:textSize="12sp" />

            <TextView
                android:id="@+id/ara_yayin_hazirtarih"
                style="?android:attr/listSeparatorTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ne zaman yerleşiceksiniz?"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/ara_yayin_konaksure"
                style="?android:attr/listSeparatorTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ne Kadar Konaklamak İstiyorsunuz?"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/ara_yayin_telefonno"
                style="?android:attr/listSeparatorTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Telefon Numaranız"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/ara_yayin_ilanbaslik"
                style="?android:attr/listSeparatorTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="İlan Başlığınız"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/ara_yayin_ilanaciklama"
                style="?android:attr/listSeparatorTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="İlan Açıklamanız"
                android:textSize="12sp" />


            <Button
                android:id="@+id/ara_yayin_onaybuton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TAMAM"
                android:textSize="18sp" />













            </LinearLayout>

    </ScrollView>
</LinearLayout>