<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorPrimary"
        >




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_weight="0.00"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/geribtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"

                android:background="?android:attr/homeAsUpIndicator"
                android:backgroundTint="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kayıt"
                android:textSize="30dp"
                android:layout_toRightOf="@+id/geribtn"
                android:id="@+id/kayittitle"
                android:textColor="@android:color/white"
                />






        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_weight="0.00"
        android:orientation="vertical">

        <TextView
            android:id="@+id/kayitisim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="Son bir adım,"
            android:textColor="@android:color/white"
            android:textSize="20dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="5dp"
            android:lineSpacingExtra="1sp"
            android:text="Deneyiminizi iyileştirmemize yardımcı olmak için aramanızı en iyi tanımlayan seçeneği seçin.Eğer ikisi de size uygunsa, her ikisini birden seçin."
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold|italic" />

    </LinearLayout>




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.02"
            android:layout_marginTop="50dp"

            >


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                >


                <CheckBox
                    android:id="@+id/kayitchkbir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"

                    />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/kayitpersonicon"
                    android:text="Kiralamam gereken bir odam var."
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/kayitpersonicon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_menu_manage"
                    android:layout_alignParentLeft="true"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="55dp"
                >


                <CheckBox
                    android:id="@+id/kayitchkiki"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignParentRight="true" />


                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/kayitbedicon"
                    android:text="Kiralamak için bir oda arıyorum."
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold|italic" />



                <ImageView
                    android:id="@+id/kayitbedicon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_menu_manage" />


            </RelativeLayout>




        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="134dp">

            <Button
                android:id="@+id/kayit4devambuton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:text="Başlayabiliriz"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold" />


        </RelativeLayout>



    </LinearLayout>


